<h1>
    Edit <%= @post.title %>
</h1>

<%= form_for(@post) do |f| %>

    <% if @post.errors.any? %>
        <div id="errors">
            <ul>
                <% @post.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>

    <%= f.label :content %>
    <%= f.text_area :content %>
    <br>

    <%= f.label :blogger %>
    <%= f.collection_select(:blogger, Blogger.all, :id, :name) %>
<% end %>