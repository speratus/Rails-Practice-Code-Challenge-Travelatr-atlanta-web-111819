<h1>Create a new Post</h1>

<%= form_for(@post) do |f| %>

    <% if @post.errors.any? %>
        <div id="errors">
        There were errors with submitting the post.
            <ul>
                <% @post.errors.full_messages.each do |msg| %> 
                    <li><%= msg %></li>
                <% end %>
            </ul> 
        </div>
    <% end %>

    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>

    <%= f.label :content %>
    <%= f.text_area :content %>
    <br>

    <%= f.label :blogger_id %>
    <%= f.collection_select(:blogger_id, Blogger.all, :id, :name) %>
    <br>

    <%= f.label :destination_id %>
    <%= f.collection_select(:destination_id, Destination.all, :id, :name) %>
    <br>

    <%= f.submit %>
<% end %>